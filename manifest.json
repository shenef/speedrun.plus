{
  "name": "speedrun.plus",
  "description": "Custom CSS and JS scripts to improve the sr.c experience",
  "version": "0.0.1",
  "manifest_version": 2,
  "permissions": [
    "*://*.speedrun.com/*",
    "storage"
  ],
  "content_scripts": [
    {
      "run_at": "document_idle",
      "matches": [
        "*://*.speedrun.com/*"
      ],
      "js": [
        "scripts/all-pages.js"
      ],
      "css": [
        "css/all-pages.css"
      ]
    }
  ],
  "icons": {
    "16": "/icon/16-srplus-icon.png",
    "32": "/icon/32-srplus-icon.png",
    "48": "/icon/48-srplus-icon.png",
    "128": "/icon/128-srplus-icon.png"
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "page_action": {
    "show_matches": [
      "*://*.speedrun.com/*"
    ],
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/icon/16-srplus-icon.png",
      "32": "/icon/32-srplus-icon.png",
      "48": "/icon/48-srplus-icon.png"
    }
  }
}
